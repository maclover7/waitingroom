<br>

<title><%= train[:id] %> Waitingroom</title>

<div class="row">
  <div class="col-md-4">
  </div>

  <div class="col-md-8">
    <h4>#<%= train[:id] %></h4>

    <% if train[:stops].any? %>
      <% train[:stops].each do |stop| %>
        <h4><%= render_stop stop %></h4>
      <% end %>
    <% else %>
      <h4>No status available</h4>
    <% end %>
  </div>
</div>
